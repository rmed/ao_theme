<?php

echo '<footer class="post">';

	// Show tags
	if(!empty($post['tags']))
	{
		echo '<div class="tags">';
			echo '<span>Tags:</span>';
			echo '<span>';
				foreach($post['tags'] as $tag)
					echo '<a class="tag" href="'.Url::tag($tag, $settings['friendly_urls']).'">'.$tag.'</a>';
			echo '</span>';
		echo '</div>';
	}

	// Read more or Permalink
	$text = ($post['read_more'])?$_LANG['READ_MORE']:$_LANG['PERMALINK'];

	echo '<span><a href="'.$post['permalink'].'">'.$text.'</a></span>';

	// Comments
	if($post['allow_comments'])
	{
		echo ' Â· ';

		if( !empty($theme['disqus_account']) && empty($theme['facebook_appId']) )
		{
			// Disqus comments
            // Added the 'Comments' text in case the browser does not load the script correctly
			echo '<span><a href="'.$post['permalink'].'#disqus_thread">'.$_LANG['COMMENTS'].'</a></span>';
		}
		elseif( !empty($theme['facebook_appId']) && empty($theme['disqus_account']) )
		{
			// Facebook comments
			echo '<span><a href="'.$post['permalink'].'#comment_form">'.$_LANG['COMMENTS'].' (<fb:comments-count href="'.BLOG_URL.$post['permalink'].'"></fb:comments-count>)</a></span>';
		}
		else
		{
			// Nibbleblog comments
			echo '<span><a href="'.$post['permalink'].'#comment_form">'.$_LANG['COMMENTS'].' ('.count($post['comments']).')</a></span>';
		}
	}

echo '</footer>';

?>
